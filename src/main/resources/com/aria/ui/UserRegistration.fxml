<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aria.ui.UserRegistrationController"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="ARIA - User Registration"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 5; -fx-border-color: #ddd;">
        <columnConstraints>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="65"/>
        </columnConstraints>

        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   promptText="+1234567890"/>

        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   promptText="Enter your username"/>

        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="Enter your first name"/>

        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   promptText="Enter your last name"/>

        <Label text="App Goal:" GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-font-weight: bold;"/>
        <TextArea fx:id="appGoalArea" GridPane.columnIndex="1" GridPane.rowIndex="4"
                  prefRowCount="3" wrapText="true"
                  promptText="Describe your goals for using ARIA"/>
    </GridPane>

    <Button text="Register" onAction="#onRegister"
            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 35;"/>

    <ProgressIndicator fx:id="progressIndicator" visible="false"/>
</VBox>