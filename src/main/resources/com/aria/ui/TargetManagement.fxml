<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aria.ui.TargetManagementController"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="ARIA - Target Management"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Button text="Add New Target" onAction="#onAddNewTarget"
                style="-fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>

    <Label text="Your Chat Contacts:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <VBox fx:id="targetsContainer" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #ddd;">
        <!-- Dynamic content will be loaded here -->
    </VBox>
</VBox>